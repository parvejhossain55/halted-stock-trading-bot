# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=False
ENVIRONMENT=production
SECRET_KEY=your-fastapi-secret-key-here-generate-with-openssl-rand-base64-32

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=halt_detector
MONGO_USER=admin
MONGO_PASSWORD=your-secure-mongodb-password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Trading Configuration
PAPER_TRADING_MODE=True
TRADING_MODE=paper

# API Keys (Configure these securely)
POLYGON_API_KEY=your-polygon-api-key

# DAS Trading Configuration
DAS_API_ENDPOINT=your-das-api-endpoint
DAS_API_KEY=your-das-api-key

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=INFO

# Risk Management
MAX_DAILY_LOSS=1000.00
MAX_POSITION_LOSS=200.00
MAX_EXPOSURE_PERCENT=25.0
MAX_CONCURRENT_TRADES=5
DAILY_TRADE_LIMIT=20
MIN_CONFIDENCE_THRESHOLD=0.6
MAX_RISK_PER_TRADE_PERCENT=1.0

# Stock Filters
MIN_STOCK_PRICE=5.0
MAX_STOCK_PRICE=300.0
MIN_VOLUME=500000

# Server Configuration
HOST=0.0.0.0
PORT=8000
